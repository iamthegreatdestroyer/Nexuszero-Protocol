# NPM Configuration for Reproducible Builds
# https://docs.npmjs.com/cli/v10/configuring-npm/npmrc

# Security
audit=true
audit-level=moderate
fund=false

# Reproducibility
save-exact=true
prefer-offline=true
package-lock=true

# Performance
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Registry
registry=https://registry.npmjs.org/
